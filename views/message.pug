// Display event messages
.messages.w-50
  each type in Object.keys(messages)
    each message in messages[type]
      if type !== "error"
        div(class="alert alert-"+type+" alert-dismissible mx-4 my-2 mt-2 fade show")= message
          button(type="button" class="close" data-dismiss="alert" aria-label="Close")
            span(aria-hidden="true") &times
      else
        div(class="alert alert-danger alert-dismissible mx-4 my-2 mt-2 fade show" role="alert")= message        
          button(type="button" class="close" data-dismiss="alert" aria-label="Close")
            span(aria-hidden="true") &times
