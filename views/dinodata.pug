doctype html
html(lang="en-US").bg-dark
  head
    title Dino-Data
    // Bring in personal styles
    link(rel="stylesheet" type="text/css" href="/css/ddstyles.css")
    // Bring in Font Awesome Icons
    link(rel="stylesheet" href="https://use.fontawesome.com/releases/v5.14.0/css/all.css")
    // Bring in Bootstrap
    link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css")
    // Bring in Google Fonts
    link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Righteous")
    link(rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Cinzel:wght@700&display=swap") 
    meta(name="viewport" content="width=device-width, initial-scale=1" charset="utf-8")  
  body.container-fluid
    main.mainGrid
      nav.navi
        div#logo
        div#links
          a(href="/dinodata" class=bookmark === "home" ? "active" : "").link
            p.sideLink Home
            i.sideIcon.fa.fa-home.fa-2x
          a(href="/dinodata/cage" class=bookmark === "cage" ? "active" : "").link
            p.sideLink Cages
            i.sideIcon.fas.fa-border-all.fa-2x
          
          a(href="/dinodata/donate").link.donate
            p.sideLink Donate
            i.sideIcon.fas.fa-dollar-sign.fa-2x  
      
      section.page
        block content
  script(src="/javascript/main.js")
  script(src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js")        
  script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js")
  // Bring in date-fns
  script(src="https://cdnjs.cloudflare.com/ajax/libs/date-fns/1.30.1/date_fns.min.js")
  // Bring in ChartJS base
  script(src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.3/Chart.bundle.min.js")
